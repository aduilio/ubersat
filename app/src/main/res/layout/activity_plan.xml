<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margin_default"
    android:paddingVertical="@dimen/margin_default"
    tools:context=".activity.PlanActivity">

    <TextView
        android:id="@+id/tvPlanDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="10"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Plan details" />

    <Button
        android:id="@+id/btSeeInstallers"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/see_installers"
        app:layout_constraintTop_toBottomOf="@id/tvPlanDetails" />

    <Button
        android:id="@+id/btRequestQuote"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="@dimen/margin_internal"
        android:text="@string/request_quote"
        app:layout_constraintTop_toBottomOf="@id/btSeeInstallers" />

</androidx.constraintlayout.widget.ConstraintLayout>